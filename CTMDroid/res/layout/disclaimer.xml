<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp" >

       <ScrollView
        android:id="@+id/disclaimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailButton">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CTMDroidTextMedium"
        android:text="@string/messaggioDisclaimer"
         />

    </ScrollView>
    

    <CheckBox
        android:id="@+id/dontShowAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disclaimerText"
        android:text="@string/dontShowAgain" />

</RelativeLayout>